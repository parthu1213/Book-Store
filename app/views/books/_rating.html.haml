= form_with model: @review, class: "nifty_form" do |f|
  %input{:name => "book_id", :type => "hidden", :value => @book.try(:id)}
  .field
    = f.label :Rating
    = f.select :rating, options_for_select([["Select One", ""], "1", "2", "3", "4", "5"]), :class => 'genForm_dropBox', :required => "true"

  .field
    = f.label :comment
    = f.text_field :comment, class: "form-control form-control-lg", require: "true"
  .field
    = f.submit 'Submit', :class => 'class="btn btn-primary mb-2"'
