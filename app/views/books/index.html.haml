.container
  #products.row.view-group
    - @books.each do |book|
      .item.col-xs-4.col-lg-4
        %a{:href => "#{book_path(book)}"}
          .thumbnail.card
            .img-event
              = image_tag url_for(book.try(:img)), class: "group list-group-img img-fluid"
            .caption.card-body
              %h4.group.card-title.inner.list-group-item-heading
                = book.title
              %p.group.inner.list-group-item-text
                = book.description
              .row
                .col-xs-12.col-md-6
                  %p.lead
                    = book.author
.mb-5 .
